# LLM API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
PERPLEXITY_API_KEY=your_perplexity_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# Additional LLM Providers (optional)
COHERE_API_KEY=your_cohere_api_key_here
MISTRAL_API_KEY=your_mistral_api_key_here

# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379/0
REDIS_BROKER_URL=redis://localhost:6379/1
REDIS_RESULT_BACKEND=redis://localhost:6379/2

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/llm_monitoring
MONGODB_URL=mongodb://localhost:27017/llm_monitoring

# Service Configuration
SERVICE_NAME=llm-monitoring
SERVICE_PORT=8004
DEBUG=False
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000
RATE_LIMIT_TOKENS_PER_MINUTE=150000
RATE_LIMIT_TOKENS_PER_HOUR=1000000

# Webhook Configuration
WEBHOOK_SECRET_KEY=your_webhook_secret_key_here
WEBHOOK_TIMEOUT=30

# Monitoring Configuration
PROMETHEUS_PORT=9094
ENABLE_METRICS=True
ENABLE_TRACING=True

# API Settings
API_V1_PREFIX=/api/v1
API_TIMEOUT=120
MAX_CONCURRENT_REQUESTS=10

# Celery Configuration
CELERY_TASK_ALWAYS_EAGER=False
CELERY_TASK_EAGER_PROPAGATES=True
CELERY_BROKER_CONNECTION_RETRY_ON_STARTUP=True

# NLP Model Configuration
SPACY_MODEL=en_core_web_sm
TRANSFORMER_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Feature Flags
ENABLE_CITATION_EXTRACTION=True
ENABLE_SENTIMENT_ANALYSIS=True
ENABLE_BRAND_MONITORING=True
ENABLE_COST_TRACKING=True