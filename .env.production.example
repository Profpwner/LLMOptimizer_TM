# Production Environment Variables Template
# Copy this to .env.production and fill in the values

# Database Credentials
POSTGRES_USER=llmoptimizer
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
MONGO_USER=admin
MONGO_PASSWORD=CHANGE_ME_STRONG_PASSWORD
REDIS_PASSWORD=CHANGE_ME_STRONG_PASSWORD
NEO4J_USER=neo4j
NEO4J_PASSWORD=CHANGE_ME_STRONG_PASSWORD
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# Security Keys (generate with: openssl rand -hex 32)
JWT_SECRET_KEY=CHANGE_ME_GENERATE_WITH_OPENSSL
SECRET_KEY=CHANGE_ME_GENERATE_WITH_OPENSSL

# API Keys
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
GOOGLE_AI_API_KEY=AIza...

# Stripe Configuration
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PUBLISHABLE_KEY=pk_live_...

# Application URLs
API_URL=https://api.yourdomain.com
FRONTEND_URL=https://app.yourdomain.com

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@yourdomain.com

# Monitoring
SENTRY_DSN=https://...@sentry.io/...
